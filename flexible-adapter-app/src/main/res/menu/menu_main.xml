<menu xmlns:android="http://schemas.android.com/apk/res/android"
	  xmlns:tools="http://schemas.android.com/tools"
	  xmlns:app="http://schemas.android.com/apk/res-auto"
	  tools:context="eu.davidea.examples.flexibleadapter.example.MainActivity">

	<!-- Search, should appear as action button -->
	<item android:id="@+id/action_search"
		  android:title="@string/action_search"
		  android:icon="@drawable/ic_action_search"
		  app:showAsAction="collapseActionView|always"
		  app:actionViewClass="android.support.v7.widget.SearchView" />

	<item android:id="@+id/action_list_type"
	      android:title="@string/grid_layout"
	      android:icon="@drawable/ic_view_grid_white_24dp"
	      app:showAsAction="always"/>

	<item android:id="@+id/action_reverse"
	      android:title="@string/forward_scrolling"
	      android:icon="@drawable/ic_sort_descending_white_24dp"
	      app:showAsAction="never"/>

	<item android:id="@+id/action_auto_collapse"
	      android:title="@string/auto_collapse"
	      app:showAsAction="never"/>

	<item android:id="@+id/action_expand_collapse_all"
	      android:title="@string/expand_all"
	      app:showAsAction="never"/>

	<item android:id="@+id/action_show_hide_headers"
	      android:title="@string/hide_headers"
	      app:showAsAction="never"/>

	<item android:id="@+id/action_sticky_headers"
	      android:title="@string/sticky_headers"
	      app:showAsAction="never"/>

	<item android:id="@+id/action_about"
	      android:title="@string/action_about"
	      android:icon="@drawable/ic_info_outline_white_24dp"
	      app:showAsAction="never"/>
	
</menu>