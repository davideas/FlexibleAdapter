<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto">

	<!-- Search, should appear as action button -->
	<item android:id="@+id/action_search"
	      android:title="@string/action_search"
	      android:icon="@drawable/ic_action_search"
	      app:showAsAction="collapseActionView|always"
	      android:animateLayoutChanges="true"
	      app:actionViewClass="android.support.v7.widget.SearchView"/>

	<item android:id="@+id/action_entry_animation"
		  android:title="@string/scrolling_entry_animation"
		  android:checkable="true"
		  android:checked="true"
		  app:showAsAction="never"/>

	<item android:id="@+id/action_animation"
		  android:title="@string/scrolling_animation"
		  android:checkable="true"
		  android:checked="false"
		  android:enabled="false"
		  app:showAsAction="never"/>

	<item android:id="@+id/action_reverse"
		  android:title="@string/reverse_scrolling"
		  android:checkable="true"
		  android:enabled="false"
		  app:showAsAction="never"/>

</menu>